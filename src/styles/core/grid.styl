//-- Init
.container__fullscreen
	width auto
	float none
	display block
	margin-right auto
	margin-left auto
	padding-left 0
	padding-right 0
.container__fixed-width
	width auto
	float none
	display block
	margin-right auto
	margin-left auto
	padding-left 0
	padding-right 0
	max-width $max-width__large
	+desktop()
		max-width $max-width__big
		padding-left 0
		padding-right 0
	+tablet()
		max-width $max-width__medium
		padding-left $padding__small
		padding-right $padding__small
	+mobile()
		max-width $max-width__small
		padding-left $padding__small
		padding-right $padding__small

.container__small
	max-width 62%
	margin-left auto
	margin-right auto
	min-height 1px
	+desktop()
		max-width 62%
	+mobile()
		max-width 100%
	
.row
	cf()
//grid
.col-desktop
