//-- Placeholder
//-----------------------------------------------
placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}

//-- init
//-----------------------------------------------
input
select
button
textarea
	margin 0
	border 0
	padding 0
	display inline-block
	vertical-align middle
	white-space normal
	background none
	line-height 1
	font-size 0.875em
	placeholder()
		color $color__input

input
textarea
	box-sizing border-box
	padding 0.625em
	font-size 0.875em
	line-height 1.5
	font-weight normal

input
	width 100%
	background-color transparent
	border-color $color__input
	z-index 1
	outline none
	appearance none
	&:focus
		outline 0
		border-color $color__input-focus
		z-index 2	

textarea 
	vertical-align top
	overflow auto
	width 100%
	border-color $color__input
	outline none
	appearance none
	background-clip padding-box
	&:focus
		border-color $color__input-focus


input
input[type='radio']
select
textarea
.formplate-select
.formplate-toggler
	border 2px solid $color__input
	border-radius $border-radius--small

input
	&[value='Error']
		border-color $color__danger
	&[value='Success']
		border-color $color__success
	&[disabled='disabled']
		border-color $color__gray-light

/* These elements are usually rendered a certain way by the browser */
button,
input[type=reset],
input[type=button],
input[type=submit],
input[type=checkbox],
input[type=radio],
select
	box-sizing border-box

