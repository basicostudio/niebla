//-- Padding top
.p-t-n
	padding-bottom 0
.p-t-s
	padding-top $padding__small
.p-t-m
	padding-top $padding__medium
.p-t-b
	padding-top $padding__big
.p-t-l
	padding-top $padding__large
.p-t-h
	padding-top $padding__huge

