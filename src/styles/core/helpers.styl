//-- Utility classes
//------------------------------------

.pull-right
	float right !important

.pull-left
	float left !important


// Toggling content
//------------------------------------

.hide
	display none !important

.show
	display block !important

.invisible
	visibility hidden

.hidden
	display none !important

// For Affix plugin
//------------------------------------

.affix
	position fixed

